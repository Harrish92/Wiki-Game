{
    "manifest_version": 3,
    "name": "Wikipedia Extension",
    "version": "1.0",
    "description": "A simple Chrome extension for Wikipedia.",
    "permissions": ["tabs", "scripting", "storage"],
    "background": {
      "service_worker": "/src/background.js"
    },
    "action": {
      "default_popup": "/public/index.html"
    },
    "content_scripts": [
      {
        "matches": ["*://*.wikipedia.org/*"],
        "js": ["/dist/scripts.js"]
      }
    ]
  }